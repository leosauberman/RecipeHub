<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.ort.leonardomoraes.recipehub.LoginActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        tools:ignore="RtlHardcoded"
        android:weightSum="1"
        android:layout_below="@+id/progressBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@mipmap/ic_launcher2" />

            <TextView
                    android:id="@+id/tv_titulo_Act_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/logo"
                    android:layout_centerHorizontal="true"
                    android:text="RecipeHub"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="50dp" />



                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textinputemail"
                    android:layout_below="@id/tv_titulo_Act_login"
                    android:theme="@style/AppTheme">

                    <EditText
                        android:id="@+id/et_emailLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/colorAccent2"
                        tools:ignore="HardcodedText" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/textinputsenha"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textinputemail"
                    android:theme="@style/AppTheme">

                    <EditText
                        android:id="@+id/et_senhaLogin"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="@string/hint_password"
                        android:inputType="textPassword"
                        android:textColor="@color/colorAccent2"
                        tools:ignore="HardcodedText" />
                </android.support.design.widget.TextInputLayout>

        <!-- LoginActivity Button -->

                <Button
                    android:id="@+id/bt_login_Act_login"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@color/colorAccent2"
                    android:text="LOGIN"
                    android:textColor="@color/colorPrimary"
                    tools:ignore="HardcodedText"
                    android:layout_below="@+id/textinputsenha"
                    android:layout_alignParentStart="true" />

                <Button
                    android:id="@+id/bt_resetaSenha_Act_login"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="Esqueceu sua senha?"
                    android:padding="4dp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent2"
                    tools:ignore="HardcodedText"
                    android:layout_below="@+id/bt_login_Act_login"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="14dp" />

        <!-- Link to LoginActivity Screen -->

            <Button
                android:id="@+id/bt_signUp_Act_login"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="4dp"
                android:text="NÃ£o tem uma conta? Crie agora!"
                android:layout_width="fill_parent"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent2"
                android:textSize="15sp"
                tools:ignore="HardcodedText"
                android:layout_below="@+id/bt_resetaSenha_Act_login"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp" />

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:padding="8dp"
                android:gravity="bottom"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_signUp_Act_login"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
