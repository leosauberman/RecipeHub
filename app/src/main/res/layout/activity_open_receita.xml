<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme">

    <include layout="@layout/toolbar"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/openContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.leonardomoraes.myapplication.OpenReceitaActivity">


        <ImageView
            android:id="@+id/imageView_Act_openReceita"
            android:layout_width="390dp"
            android:layout_height="70dp"
            app:srcCompat="@android:drawable/ic_menu_gallery"
            android:layout_marginTop="57dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_Act_openReceita"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:text="@string/nome_receita"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ingredientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nome"
            android:layout_marginStart="14dp"
            android:layout_marginTop="18dp"
            android:text="@string/ingredientes"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ingredientes"
            android:layout_below="@+id/tv_ingredientesReceita_Act_openReceita"
            android:layout_marginTop="12dp"
            android:text="@string/tempo"
            android:textColor="#ff000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/preparo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tempo"
            android:layout_below="@+id/tempo"
            android:layout_marginTop="30dp"
            android:text="@string/preparo"
            android:textColor="#ff000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_nomeReceita_Act_openReceita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/nome"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/nome"
            android:text="TextView"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <TextView
        android:id="@+id/tv_ingredientesReceita_Act_openReceita"
        android:layout_width="210dp"
        android:layout_height="110dp"
        android:layout_alignTop="@+id/ingredientes"
        android:layout_marginStart="130dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_tempoReceita_Act_openReceita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tempo"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/tempo"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_preparoReceita_Act_openReceita"
            android:layout_width="360dp"
            android:layout_height="150dp"
            android:layout_alignStart="@+id/preparo"
            android:layout_below="@+id/preparo"
            android:layout_marginTop="14dp"
            android:fadeScrollbars="false"
            android:scrollbars="vertical"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_tempoReceita_Act_openReceita"
            android:layout_alignBottom="@+id/tv_tempoReceita_Act_openReceita"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@+id/tv_tempoReceita_Act_openReceita"
            android:text="Tipo:"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_tipoReceita_Act_openReceita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tipo"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/tipo"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_preparoReceita_Act_openReceita"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:text="version" />

    <TextView
        android:id="@+id/autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/version"
        android:layout_toStartOf="@+id/tv_tempoReceita_Act_openReceita"
        android:text="Autor: "
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_autor_Act_openReceita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/autor"
        android:layout_toEndOf="@+id/autor"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_alignTop="@+id/autor" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEL"
        android:layout_alignBaseline="@+id/version"
        android:layout_alignBottom="@+id/version"
        android:layout_toStartOf="@+id/version" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:id="@+id/drawerPane"
        android:layout_gravity="start">

        <!--Profile Box-->

        <RelativeLayout
            android:id="@+id/profileBox"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/material_blue_grey_800"
            android:padding="8dp" >

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_android"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/profileImage"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:text="Ver perfil"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    tools:clickable="false" />
            </LinearLayout>
        </RelativeLayout>

        <!--List of Actions (pages)-->
        <ListView
            android:id="@+id/navList"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/profileBox"
            android:choiceMode="singleChoice"
            android:background="#ffffffff" />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
