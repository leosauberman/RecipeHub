<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ort.leonardomoraes.recipehub">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/recipehub_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity android:name="org.ort.leonardomoraes.recipehub.MainActivity" />
        <activity android:name="org.ort.leonardomoraes.recipehub.TelaReceita" />
        <activity android:name="org.ort.leonardomoraes.recipehub.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.ort.leonardomoraes.recipehub.SignupActivity" />
        <activity android:name="org.ort.leonardomoraes.recipehub.ResetPasswordActivity" />
        <activity android:name="org.ort.leonardomoraes.recipehub.OpenReceitaActivity" />
        <activity android:name="org.ort.leonardomoraes.recipehub.SearchActivity" />
        <activity android:name="org.ort.leonardomoraes.recipehub.PerfilUsuarioActivity" />
        <activity android:name="org.ort.leonardomoraes.recipehub.VersionamentoActivity" />
        <activity android:name="org.ort.leonardomoraes.recipehub.SalvarActivity" />
        <activity android:name="org.ort.leonardomoraes.recipehub.FilhasActivity"></activity>
    </application>

</manifest>