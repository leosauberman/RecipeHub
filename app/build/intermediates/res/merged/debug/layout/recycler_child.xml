<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:contentPadding="20dp"
    card_view:cardElevation="10dp"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nomeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tempoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/nomeTV"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="Tempo"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tipoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tempoTV"
            android:layout_alignBottom="@+id/tempoTV"
            android:layout_marginStart="65dp"
            android:layout_toEndOf="@+id/tempoTV"
            android:text="Tipo"
            android:textSize="18sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
