<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela_receita"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/AppTheme"
    tools:theme="@style/AppTheme">

    <TextView
        android:id="@+id/nomeReceita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nomeEdit"
        android:layout_alignBottom="@+id/nomeEdit"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:text="@string/nome_receita"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/nomeEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tempoEdit" />

    <TextView
        android:id="@+id/ingredientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nomeReceita"
        android:layout_below="@+id/nomeEdit"
        android:layout_marginTop="22dp"
        android:text="@string/ingredientes"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/ingredientesEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ingredientes"
        android:layout_below="@+id/ingredientes"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/ingredient_description"
        android:inputType="textMultiLine"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ingredientesEdit"
        android:layout_below="@+id/ingredientesEdit"
        android:layout_marginTop="44dp"
        android:text="@string/tempo"
        android:textColor="#ff000000" />

    <EditText
        android:id="@+id/tempoEdit"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@id/tempo"
        android:layout_alignTop="@+id/tempo"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/nomeReceita"
        android:inputType="time"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/tempo"
        android:layout_below="@+id/tempoEdit"
        android:id="@+id/radioGroup">

        <RadioButton
            android:id="@+id/salgado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="@string/sal" />

        <RadioButton
            android:id="@+id/doce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/doce" />
    </RadioGroup>

    <Spinner
        android:id="@+id/tipo"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="101dp"
        android:layout_marginTop="300dp"
        android:spinnerMode="dialog" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/criarReceita"
        android:background="@drawable/ic_add_a_photo_black_24dp"
        android:layout_below="@+id/ingredientes"
        android:layout_alignEnd="@+id/criarReceita" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/criarReceita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        app:fabSize="normal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/preparo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tempo"
        android:layout_below="@+id/radioGroup"
        android:layout_marginTop="30dp"
        android:text="@string/preparo"
        android:textColor="#ff000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/preparoEdit"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_alignBottom="@+id/criarReceita"
        android:layout_alignStart="@+id/preparo" />

    <TextView
        android:id="@+id/minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="min"
        android:layout_alignBaseline="@+id/tempoEdit"
        android:layout_alignBottom="@+id/tempoEdit"
        android:layout_toEndOf="@+id/tempoEdit" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/tempoEdit"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
